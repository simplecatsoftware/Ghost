{
  "extends": [
    "config:base",
     "group:jsTestMonMajor",
     "group:linters",
     ":maintainLockFilesMonthly",
     ":prHourlyLimitNone"
  ],
  "travis": { "enabled": true },
  "node": {
    "supportPolicy": ["lts"]
   },
  "ignoreDeps": ["nodemailer"],
  "ignorePaths": ["core/server/lib/members", "core/test"],
  "separateMinorPatch": true,
  "patch": {
    "automerge": true,
    "automergeType": "branch"
  },
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "groupName": "grunt + plugins",
      "packagePatterns": ["^grunt"]
    }
   ]
}
